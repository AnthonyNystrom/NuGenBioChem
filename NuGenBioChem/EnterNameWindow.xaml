<Window x:Class="NuGenBioChem.EnterNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EnterNameWindow" Width="350" SizeToContent="Height" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True" WindowStartupLocation="CenterOwner">
  <StackPanel Orientation="Vertical" Margin="2">
    <DockPanel LastChildFill="True" Margin="2">
      <TextBlock VerticalAlignment="Center" Margin="2">Name: </TextBlock>
      <TextBox x:Name="textBox" TextChanged="OnTextChanged" Margin="2">Untitled 1</TextBox>
    </DockPanel>
    <StackPanel Orientation="Horizontal" Margin="2" HorizontalAlignment="Right">
      <Button IsDefault="True" x:Name="buttonOk" Click="OkButtonClick" Margin="1" Width="80">Ok</Button>
      <Button IsCancel="True" Margin="1" Width="80">Cancel</Button>
    </StackPanel>
  </StackPanel>
</Window>
